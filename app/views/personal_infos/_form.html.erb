<%= form_for(@personal_info, remote: true) do |f| %>
<% if @personal_info.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@personal_info.errors.count, "error") %>
        prohibited this personal_info from being saved:</h2>

    <ul>
        <% @personal_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="col-md-6">
    <div class="form-group">
        <%= f.label :designation %><br>
        <%= f.text_field :designation, class: "form-control" %>
    </div>
</div>

<div class="col-md-6">
    <div class="form-group">
        <%= f.label :image, :class=>"control-label" %><br>
        <%= f.file_field :image, class: "form-control" %>
    </div>
</div>

<div class="col-md-12">
    <div class="form-group">
        <%= f.label :profile %><br>
        <%= f.text_area :profile, class: "form-control" %>
    </div>
</div>

<script>
    $(function () {
      var dateFormat = "yy-mm-dd"
        $("#datepicker").datepicker({changeMonth: true, changeYear: true, dateFormat});
    });
</script>

<div class="col-md-4">
    <div class="form-group">
        <%= f.label :birthday %>
        <%= f.text_field :birthday, class: "form-control", id: "datepicker" %>
    </div>
</div>

<div class="col-md-4">
    <div class="form-group">
        <%= f.label :nationality %>
        <%= f.text_field :nationality, class: "form-control" %>
    </div>
</div>

<div class="col-md-4">
    <div class="form-group">
        <%= f.label :language %><br>
        <%= f.text_field :language, class: "form-control" %>
    </div>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
