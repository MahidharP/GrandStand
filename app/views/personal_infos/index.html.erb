<p id="notice"><%= notice %></p>
<% if @personal_infos.nil? %>
<h2>
    Please Create Your Personal Info
</h2>
<% else %>
<h1>Listing Personal Infos</h1>

<table>
    <thead>
        <tr>

            <th>Profile</th>
            <th>Designation</th>
            <th>Image</th>
            <th>Birthday</th>
            <th>Nationality</th>
            <th>Language</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>

        <tr>

            <td><%= @personal_infos.try(:profile) %></td>
            <td><%= @personal_infos.try(:designation) %></td>
            <td><%= @personal_infos.try(:image) %></td>
            <td><%= @personal_infos.try(:birthday) %></td>
            <td><%= @personal_infos.try(:nationality) %></td>
            <td><%= @personal_infos.try(:language) %></td>
            <td><%= link_to 'Show', @personal_infos %></td>
            <td><%= link_to 'Edit', edit_personal_info_path(@personal_infos) %></td>
            <td><%= link_to 'Destroy', @personal_infos, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

    </tbody>
</table>

<br>
<% end %>
<%= link_to 'New Personal info', new_personal_info_path %>
