<%= form_for(@interest, remote: true) do |f| %>
<% if @interest.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@interest.errors.count, "error") %>
        prohibited this interest from being saved:</h2>

    <ul>
        <% @interest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="col-md-12">
    <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :icon %><br>
        <%= f.text_field :icon, class: "form-control" %>
    </div>
</div>



<div class="actions">
    <%= f.submit %>
</div>
<% end %>
